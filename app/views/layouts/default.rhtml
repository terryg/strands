<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
  <title><%=h page_title %></title>
  <%= page_header %>
  <%= stylesheet_link_tag 'application.css', :media => 'all' %>
  <%= javascript_include_tag 'application' %>
<script type="text/javascript">

function onLoad() {
<% if not @strands.nil? %>
<% @strands.each do |strand| %>
  var eventSource<%= strand %> = new Timeline.DefaultEventSource();
<% end%>
  var bandInfos = [
<% @strands.each do |strand| %>
    Timeline.createBandInfo({
        eventSource:    eventSource<%= strand %>,
        width:          "<%= 100 / @strands.size %>%", 
        intervalUnit:   Timeline.DateTime.MONTH, 
        intervalPixels: 100
    }),
<% end %>
  ];

<% count = 0 %> 
<% @strands.each do |strand| %>
  <% if count != 0 %>
  bandInfos[<%= count %>].syncWith = 0;
  <% end %>
  bandInfos[<%= count %>].highlight = true;
  <% count = count + 1 %>
<% end %>
 
<% count = 0 %> 
<% @strands.each do |strand| %>
  bandInfos[<%= count %>].decorators = [
    new Timeline.SpanHighlightDecorator({
      startDate:  "<%= Time.now - (365 * 24 * 60 * 60) %>",
      endDate:    "<%= Time.now %>",
      opacity:    50,
      startLabel: "<%= strand %>",
      endLabel:   "<%= strand %>"
    })
  ];   

  <% count = count + 1 %>
<% end %>

  tl = Timeline.create(document.getElementById("strands-timeline"), bandInfos);
<% @strands.each do |strand| %>
  tl.loadXML("/strands/show_nodes/<%= strand %>/nodes.xml", function(xml, url) { eventSource<%= strand %>.loadXML(xml, url); });
<% end %>
}
<% end %>
</script>
  
</head>

<body onload="onLoad();" onresize="onResize();">
<div id="container">
  <div id="header">
    <h1><span><a href="/">strnds.com</a></span></h1>
    <h2>connect time/space</h2>
  </div>

  <div id="page">
    <div id="content">
      <%= @content_for_layout %>
    </div>

    <div id="sidebar">
      <!-- search -->

      <!-- sidebar components -->
      <%= render_sidebars %>
      
      <!-- adsense -->
      <%= render :partial => 'shared/adsense' %>
        
    </div>
    <br style="clear:both;" />
  </div>

  <div id="footer">
    <hr />
    <p><a href="/">strnds.com</a></p>
    <ul>
      <li>powered by <a href="http://simile.mit.edu/timeline">SIMILE timeline</a> & <a href="http://typosphere.org">typo</a> /
          styled with <a href="http://quotedprintable.com/pages/scribbish">scribbish</a></li>
    </ul>
  </div>
</div>
</body>
</html>
